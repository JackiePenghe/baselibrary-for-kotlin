<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_key_board"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_tv_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/number_tv_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/number_tv_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_tv_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/number_tv_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/number_tv_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_tv_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/number_tv_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/number_tv_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_tv_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_clear_btn"
            android:gravity="center"
            android:text="@string/clear"
            android:textColor="@color/black"
            android:textSize="41dp" />

        <TextView
            android:id="@+id/number_tv_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <RelativeLayout
            android:id="@+id/number_tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_btn">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textColor="@color/black"
                    android:textSize="41dp" />


                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="28dp"
                    android:src="@drawable/keyboard_delete" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>