<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/com_jackiepenghe_activity_nav_header_height"
    android:background="@drawable/com_jackiepenghe_baselibrary_side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/com_jackiepenghe_activity_activity_vertical_margin"
    android:paddingLeft="@dimen/com_jackiepenghe_activity_activity_horizontal_margin"
    android:paddingRight="@dimen/com_jackiepenghe_activity_activity_horizontal_margin"
    android:paddingTop="@dimen/com_jackiepenghe_activity_activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/com_jackiepenghe_activity_nav_header_vertical_spacing"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/com_jackiepenghe_activity_nav_header_vertical_spacing"
        android:text="Android Studio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android.studio@android.com"
        tools:ignore="HardcodedText" />

</LinearLayout>
