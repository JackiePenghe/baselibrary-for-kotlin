<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="max_progress" format="float" />
        <attr name="progress_color" format="color" />
        <attr name="round_color" format="color" />
        <attr name="round_width" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="show_text" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BaseBanner">
        <attr name="points_visibility" format="boolean" />
        <attr name="points_position" format="enum">
            <enum name="CENTER" value="0" />
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>
        <attr name="points_container_background" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="FlowLayout">
        <attr name="line_interval" format="dimension" />
        <attr name="internal_line_interval" format="dimension" />
    </declare-styleable>
    <declare-styleable name="PasswordView">
        <attr name="Password_viewBackground" format="reference|color"/>
        <attr name="password_enableHideCode" format="boolean"/>
        <attr name="password_enableHideBoxWhenNotInput" format="boolean"/>
        <attr name="password_enableHideCodeSetText" format="string"/>
        <attr name="password_enableCursor" format="boolean"/>
        <attr name="password_enableHighLight" format="boolean"/>
        <attr name="password_enableSoftKeyboardAutoShow" format="boolean"/>
        <attr name="password_enableSoftKeyboardAutoClose" format="boolean"/>
        <attr name="password_enableLockTextView" format="boolean"/>
        <attr name="password_text_setColor" format="color"/>
        <attr name="password_text_setSize" format="integer"/>
        <attr name="android:inputType"/>
        <attr name="password_text_setIsBold" format="boolean"/>
        <attr name="password_box_setNumber" format="integer"/>
        <attr name="password_box_setMargin" format="dimension|integer"/>
        <attr name="password_box_setSize" format="dimension|integer"/>
        <attr name="password_cursorHeight" format="dimension|integer"/>
        <attr name="password_cursorWidth" format="dimension|integer"/>
        <attr name="password_cursorFrequencyMillisecond" format="integer"/>
        <attr name="password_cursorBackgroundDrawable" format="reference|color"/>
        <attr name="password_cursorColor" format="reference|color"/>
        <attr name="password_box_strokeWidth" format="reference|color"/>
        <attr name="password_box_hasInput_setColor" format="reference|color"/>
        <attr name="password_box_notInput_setColor" format="reference|color"/>
        <attr name="password_box_highLight_setColor" format="reference|color"/>
        <attr name="password_box_locked_setColor" format="reference|color"/>
        <attr name="android:text"/>
        <!--    如果设置了以下backgroundDrawable，对应的setColor则不生效    -->
        <attr name="password_box_notInput_backgroundDrawable" format="reference|color"/>
        <attr name="password_box_locked_backgroundDrawable" format="reference|color"/>
        <attr name="password_box_highLight_backgroundDrawable" format="reference|color"/>
        <attr name="password_box_hasInput_backgroundDrawable" format="dimension|integer"/>
    </declare-styleable>
</resources>