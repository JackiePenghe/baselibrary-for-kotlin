<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Base application theme.  -->
    <!--suppress AndroidDomInspection -->
    <style name="AppTheme" parent="Theme.BaseLibrary" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--suppress AndroidDomInspection -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--suppress AndroidDomInspection -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/com_jackiepenghe_baselibrary_light_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">#80FFFFFF</item>
    </style>

    <style name="WelcomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/com_jackiepenghe_baselibrary_light_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">#80FFFFFF</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget" />

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FullScreenDialog" parent="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowBackground">#40FFFFFF</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>